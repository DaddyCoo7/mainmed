{
  "name": "medtransic-static-html",
  "version": "1.0.0",
  "description": "Static HTML build of Medtransic website with full SEO optimization",
  "type": "module",
  "scripts": {
    "build": "node src/scripts/build.js",
    "build:css": "tailwindcss -i src/styles/input.css -o dist/assets/css/styles.css --minify",
    "build:full": "npm run build:css && npm run build",
    "dev": "npm run build:css && node src/scripts/build.js --watch",
    "clean": "rm -rf dist && mkdir -p dist/assets/{css,images,icons}",
    "validate": "node src/scripts/validate.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.77.0"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "html-minifier-terser": "^7.2.0",
    "dotenv": "^17.2.3"
  }
}
